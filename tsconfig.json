{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": false,
    "inlineSourceMap": true,
    "inlineSources": false,
    "noEmitHelpers": true,
    "importHelpers": true,
    "removeComments": false,
    "types": [
      "node"
    ],
    "lib": [
      "es2016",
      "es2015",
      "dom"
    ],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*.ts"
  ]
}